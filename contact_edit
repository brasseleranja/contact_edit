<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>Besuchsbericht Weiterleitung</title>
  <script>
    window.onload = function () {
      const params = new URLSearchParams(window.location.search);
      const id = params.get("id");

      if (!id) {
        document.body.innerHTML = "❌ Fehlender Parameter: id.";
        return;
      }

      // Ziel-URL zur bras_besuchsbericht-Seite mit dynamischer ID
      const zielUrl = "https://kometdentallive.crm4.dynamics.com/main.aspx" +
        "?appid=53ef3462-a446-f011-877a-000d3ab2b09a" +
        "&pagetype=entityrecord" +
        "&etn=bras_besuchsbericht" +
        "&id=" + encodeURIComponent(id);

      window.location.href = zielUrl;
    };
  </script>
</head>
<body>
  <p>🔄 Bitte warten – der Besuchsbericht wird geladen ...</p>
</body>
</html>
